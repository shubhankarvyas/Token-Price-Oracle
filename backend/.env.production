# Backend Environment Variables for Production

# MongoDB Configuration (Required)
MONGODB_URI=mongodb+srv://REPLACE_WITH_YOUR_ATLAS_CONNECTION_STRING
MONGODB_DB_NAME=token-price-db

# Alchemy API Configuration (Required) 
ALCHEMY_API_KEY=REPLACE_WITH_YOUR_ALCHEMY_API_KEY

# Redis Configuration (Optional - for caching)
REDIS_URL=REPLACE_WITH_YOUR_REDIS_CLOUD_URL
REDIS_TTL=300

# BullMQ Configuration (Optional - for job scheduling)
BULLMQ_REDIS_URL=REPLACE_WITH_YOUR_REDIS_CLOUD_URL
BULLMQ_QUEUE_NAME=price-history

# Server Configuration
PORT=3001
NODE_ENV=production

# CORS Configuration
CORS_ORIGINS=https://token-price-oracle-pied.vercel.app,http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined
